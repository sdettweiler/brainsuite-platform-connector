modules = ["python-3.12", "nodejs-20", "bash", "web"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
run = ["bash", "replit_start.sh"]
deploymentTarget = "autoscale"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Start App"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash replit_start.sh"

[[workflows.workflow]]
name = "Start App"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash replit_start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
