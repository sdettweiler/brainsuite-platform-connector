modules = ["python-3.12", "nodejs-20", "bash", "web"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 80
externalPort = 80

[deployment]
run = ["bash", "replit_start.sh"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start App"

[[workflows.workflow]]
name = "Start App"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash replit_start.sh"

[agent]
expertMode = true
