# Build stage
FROM node:20-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build -- --configuration production

# Serve stage
FROM nginx:alpine

# Copy built app
COPY --from=builder /app/dist/brainsuite-platform-connector/browser /usr/share/nginx/html

# Nginx config
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
